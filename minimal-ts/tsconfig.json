{
    "include": ["**.tsx", "**.ts"],
    "compilerOptions": {
        "module": "esnext",
        "target": "ESNext",
        "types": ["@girs/gjs", "@girs/gtk-4.0", "@girs/gjs/dom"],
        "moduleResolution": "Node16",
        "isolatedModules": true,
        "esModuleInterop": true,
        "jsx": "preserve",
        "jsxImportSource": "gsolid",
        "lib": [
            "ES2015",
            "ES2016",
            "ES2017",
            "ES2018",
            "ES2019",
            "ES2020",
            "ES2021",
            "ES2022",
            "ESNext",
        ]
    },
}